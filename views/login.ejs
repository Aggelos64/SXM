<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Σύνδεση</h1>
      <%- include('./partials/errmsg.ejs')%>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            />
        </div>
        <div class="form-group">
          <label for="password">Kωδικός</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Kωδικός"
            />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Σύνδεση</button>
      </form>
      <p class="lead mt-4">Δεν έχεις λογαριασμό? <a href="/users/register">Εγγραφή.</a></p>
    </div>
  </div>
</div>
