    <%if(ad.propType.main != 'other'){%>
    <hr class="border-success">
    <div class="form-group">
        <h5>Έτος κατασκευής:</h5>
        <input type="text" class="form-control form-control-sm" id="constage" name="constage" placeholder="Πληκτρολόγησε το έτος κατασκευής (π.χ. 1995)" value="<%= ad.atrr.constAge != 'undefined' ? ad.atrr.constAge : ''%>">
