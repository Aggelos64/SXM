<form autocomplete="off" id="form" action="/post/main-features?id=<%-ad._id%>" method="POST">
    <div class="form-group">
        <h5>Τιμή ακινήτου:<small class="text-muted"> (Υποχρεωτικό)</small></h5>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="price" name="price" placeholder="Πληκτρολόγησε μόνο την τιμή" value="<%= ad.price.now != 'undefined' ? ad.price.now : ''%>">
            <div class="input-group-append">
                <span class="input-group-text"><%-ad.type ? '€' : '€/μήνα'%></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <h5>Εμβαδόν ακινήτου:<small class="text-muted"> (Υποχρεωτικό)</small></h5>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="area" name="area" placeholder="Πληκτρολόγησε το εμβαδόν" value="<%= ad.area != 'undefined' ? ad.area : ''%>">
            <div class="input-group-append">
                <span class="input-group-text">τ.μ.</span>
            </div>
        </div>
    </div>
    <%if(ad.propType.main != 'land'){%>
    <div class="form-group">
        <h5>Εμβαδόν οικοπέδου:</h5>
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="area2" name="area2" placeholder="Πληκτρολόγησε το εμβαδόν" value="<%= ad.atrr.propArea != 'undefined' ? ad.atrr.propArea : ''%>">
            <div class="input-group-append">
                <span class="input-group-text">τ.μ.</span>
            </div>
        </div>
    </div>
    <%}%>
