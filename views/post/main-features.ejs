        <label class="form-check-label d-block"><input name="status" class="form-check-input" type="checkbox" <%= ad.atrr.status.includes('Ανακαινισμένο') ? 'checked' : ''%> value="Ανακαινισμένο">Ανακαινισμένο</label>
